<UserControl x:Class="Capter4.ColorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Capter4"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="1" Width="336" Margin="6" BorderBrush="Black">
            <StackPanel Orientation="Horizontal">
                <Rectangle x:Name="rectangle" Width="72" Height="72" Margin="6" Stroke="Black"></Rectangle>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="tbName" FontSize="24"/>
                    <TextBlock x:Name="tbRGB" FontSize="18"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
