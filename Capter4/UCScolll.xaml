<UserControl x:Class="Capter4.UCScolll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Capter4"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="appleAcrollViewer" Source="/MaruWPFDll;component/StyleResource/AppleScrollViewer.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer Grid.Row="2" Style="{x:Null}">
            <StackPanel x:Name="stackPanel1">
                <TextBlock Text="0"></TextBlock>
                <TextBlock Text="1"></TextBlock>
                <TextBlock Text="2"></TextBlock>
                <TextBlock Text="3"></TextBlock>
                <TextBlock Text="4"></TextBlock>
                <TextBlock Text="5"></TextBlock>
                <TextBlock Text="6"></TextBlock>
                <TextBlock Text="7"></TextBlock>
                <TextBlock Text="8"></TextBlock>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
